#!/bin/sh
echo ""
echo "$(tput setaf 3)     _______       $(tput setaf 4)$(whoami)@$(hostname)"
echo "$(tput setaf 3)    /______ \      $(tput setaf 6)os      $(tput setaf 7)$(lsb_release -sd)"
echo "$(tput setaf 3)   /____  /  \     $(tput setaf 6)host    $(tput setaf 7)$(cat /sys/devices/virtual/dmi/id/product_name) $(cat /sys/devices/virtual/dmi/id/product_version)"
echo "$(tput setaf 3)  /    / /    \    $(tput setaf 6)kernel  $(tput setaf 7)$(uname -r)"
echo "$(tput setaf 3)  \   / /_____/    $(tput setaf 6)uptime  $(tput setaf 7)$(uptime -p | cut -c 4-)"
echo "$(tput setaf 3)   \ /_______/     $(tput setaf 6)pkgs    $(tput setaf 7)$(dpkg-query -l | grep "^ii" | wc -l ) installed"
echo "$(tput setaf 3)    \_______/      $(tput setaf 6)memory  $(tput setaf 7)$(free | grep Mem | awk '{printf("%.2f", $4/$2 * 100.0)}')% free of $(free -m| grep Mem | awk '{printf($2)}')MB"
echo ""
echo "                   $(tput setaf 0)███ $(tput setaf 1)███ $(tput setaf 2)███ $(tput setaf 3)███ $(tput setaf 4)███ $(tput setaf 5)███ $(tput setaf 6)███ $(tput setaf 7)███"
echo ""
